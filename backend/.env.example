# Server Configuration
PORT=3001
NODE_ENV=development

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Firebase Configuration
# Option 1: Use service account JSON file
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Option 2: Use individual credentials
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# PharmCAT (CPIC) Integration
# Example: PHARMCAT_COMMAND=java -jar C:\\tools\\pharmcat\\pharmcat.jar -vcf {vcf} -o {outDir}
PHARMCAT_ENABLED=false
PHARMCAT_COMMAND=
PHARMCAT_OUTPUT_DIR=./pharmcat-output
PHARMCAT_REPORT_NAME=pharmcat.report.json
